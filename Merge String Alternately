class Solution {
public:
    string mergeAlternately(string w1, string w2) {
        string ans = "";
        int i = 0 , j = 0, n = w1.size(), m = w2.size();

        while(i < n || j < m) {
            if(i < n) ans += w1[i++];
            if(j < m) ans += w2[j++];
        }

        return ans;
    }
};
