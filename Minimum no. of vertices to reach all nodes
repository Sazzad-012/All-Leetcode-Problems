class Solution {
public:
    vector<int> findSmallestSetOfVertices(int n, vector<vector<int>>& edges) {
        vector<int>inDegree(n,false);

        for(auto &vec:edges){
           int u = vec[0];
           int v = vec[1];

           inDegree[v] = true;
        }    

        vector<int>ans;

        for(int i = 0; i < n; i++){
        if(inDegree[i] == false){
            ans.push_back(i);
            }
        }
       return ans;
       
    }
};
