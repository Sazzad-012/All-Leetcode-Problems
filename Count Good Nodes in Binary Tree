class Solution {
public:
    int ans = 0;

    void dfs(TreeNode * root, int max) {
        if(!root) return;

        if(root -> val >= max) {
            ans++;
            max = root -> val;
        }

        dfs(root -> left, max);
        dfs(root -> right, max);
    }
    
    int goodNodes(TreeNode* root) {
        dfs(root, INT_MIN);
        return ans;
    }
};
