class Solution {
public:
    int sumRootToLeaf(TreeNode* root) {
        return dfs(root, 0);
    }

    int dfs(TreeNode* root, int val) {
        if(!root) return 0;

        val = val * 2 + root -> val;

        if(!root -> left and !root -> right) {
            return val;
        }
        return dfs(root -> left, val) + dfs(root -> right, val);
    }
};
